class Solution:
    def findSubstringInWraproundString(self, s: str) -> int:
        dp = [0] * 26  # dp[i] — макс длина подстроки, заканчивающейся на chr(i + 'a')
        length = 0

        for i in range(len(s)):
            if i > 0 and (ord(s[i]) - ord(s[i-1]) == 1 or (s[i-1] == 'z' and s[i] == 'a')):
                length += 1
            else:
                length = 1
            index = ord(s[i]) - ord('a')
            dp[index] = max(dp[index], length)

        return sum(dp)
